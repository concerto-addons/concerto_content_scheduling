<div class="subblock">
  <p class="uppercase" style="margin-bottom: 0px;"><small><b><%= t('.schedule') %></b></small></p>

  <ul>
  <% if @content.respond_to?(:has_schedule?) and @content.has_schedule? %>
    <li><%=t('.from') %> <%= l(DateTime.parse(@content.schedule_info['start_time'], "%I:%M %P"), :format => :twelve_hour_time) %></li>
    <li><%=t('.until') %> <%= l(DateTime.parse(@content.schedule_info['end_time'], "%I:%M %P"), :format => :twelve_hour_time) %></li>
    <li><%= @content.schedule_in_words %></li>
  <% else %>
    <li><%=t('.available')%></li>
  <% end %>
  </ul>
</div>
